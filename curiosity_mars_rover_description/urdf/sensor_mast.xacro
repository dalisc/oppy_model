<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="sensor_mast" params="">

	<link name='chassis_to_mast_p'>
		<inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.02" />
            <inertia ixx="2.61666666667e-05" ixy="0.0" ixz="0.0" iyy="2.61666666667e-05" iyz="0.0" izz="3.6e-05"/>
        </inertial>
        <collision>
            <origin rpy="1.57 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.02"/>
            </geometry>
        </collision>
		<visual>
            <origin rpy="1.57 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.02" length="0.02"/>
            </geometry>
        </visual>
	</link>

	<joint name="chassis_to_mast_p_joint" type="fixed">
		<parent link="chassis"/>
		<child link="chassis_to_mast_p"/>
		<origin xyz="-0.55456 -0.722499 0.331395" rpy="0 0 0.523599"/>
	</joint>


	<link name='mast_p'>
		<collision>
			<origin xyz="0 0 0"
					rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://curiosity_mars_rover_description/meshes/mast_p_fixed.dae" scale="${scale_XYZ} ${scale_XYZ} ${scale_XYZ}"/>
			</geometry>
		</collision>

		<visual>
			<origin xyz="0 0 0"
					rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://curiosity_mars_rover_description/meshes/mast_p_fixed.dae" scale="${scale_XYZ} ${scale_XYZ} ${scale_XYZ}"/>
			</geometry>
		</visual>

		<inertial>
			<origin xyz="0 0 0"
					rpy="0 0 0"/>
			<mass value="${armMass}"/>
			<box_inertia
				m="${armMass}"
				x="${armWidth*scale_XYZ}"
				y="${armLength*scale_XYZ}"
				z="${armHeight*scale_XYZ}"/>
		</inertial>
	</link>


  	<joint name="mast_p_joint" type="revolute">
		<parent link="chassis_to_mast_p"/>
		<child link="mast_p"/>
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<limit lower="-0.2" upper="0.2" effort="10000.0" velocity="100.0"/>
        <axis xyz="0 0 1"/>
        <joint_properties damping="0.0" friction="0.0"/>
	</joint>

    <transmission name="mast_p_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="mast_p_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="mast_pMotor">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>

</robot>